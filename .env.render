# Production Environment Variables for Render Deployment
# Add these to your Render service environment variables

# Django Settings
SECRET_KEY=your-super-secret-key-here
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings.production

# Database and Redis (Render will provide these automatically)
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://host:port/0
CELERY_BROKER_URL=${REDIS_URL}
REDIS_BACKEND=${REDIS_URL}

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Twilio (for SMS verification)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Stripe Payment
STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key
STRIPE_SECRET_KEY=sk_live_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Domain Configuration
BACKEND_DOMAIN=https://your-app-name.onrender.com
FRONTEND_DOMAIN=https://your-frontend-domain.com

# Payment URLs
PAYMENT_SUCCESS_URL=${FRONTEND_DOMAIN}/payment/success
PAYMENT_CANCEL_URL=${FRONTEND_DOMAIN}/payment/cancel

# CSRF Trusted Origins (add your backend and frontend domains)
CSRF_TRUSTED_ORIGINS=https://your-app-name.onrender.com,https://your-frontend-domain.com

# Allowed Hosts (add your backend domain)
ALLOWED_HOSTS=your-app-name.onrender.com,localhost,127.0.0.1
